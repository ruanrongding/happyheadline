<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/indexView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/bg_ripple_rless"
        android:drawableTop="@drawable/index_selector"
        android:gravity="center"
        android:padding="@dimen/dp_5"
        android:text="@string/main_index"
        android:textColor="@color/color_operation"
        android:textSize="@dimen/sp_10" />

    <TextView
        android:id="@+id/communityView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/bg_ripple_rless"
        android:drawableTop="@drawable/host_selector"
        android:gravity="center"
        android:padding="@dimen/dp_5"
        android:text="@string/main_article"
        android:textColor="@color/color_operation"
        android:textSize="@dimen/sp_10" />

    <TextView
        android:id="@+id/vedioView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/bg_ripple_rless"
        android:drawableTop="@drawable/find_selector"
        android:gravity="center"
        android:padding="@dimen/dp_5"
        android:text="@string/main_vedio"
        android:textColor="@color/color_operation"
        android:textSize="@dimen/sp_10" />

    <TextView
        android:id="@+id/persionView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/bg_ripple_rless"
        android:drawableTop="@drawable/user_selector"
        android:gravity="center"
        android:padding="@dimen/dp_5"
        android:text="@string/main_persion"
        android:textColor="@color/color_operation"
        android:textSize="@dimen/dp_10" />


</LinearLayout>