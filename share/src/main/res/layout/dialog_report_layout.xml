<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">


    <TextView
        android:id="@+id/tv_title_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/dp_10"
        android:text="选择理由，精准屏蔽"
        android:textColor="@color/color_f3"
        android:textSize="@dimen/sp_16" />

    <TextView
        android:id="@+id/tv_report_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:gravity="center"
        android:padding="@dimen/dp_10"
        android:text="内容质量差（不好看）"
        android:textColor="@color/color_f6"
        android:textSize="@dimen/sp_16" />


    <TextView
        android:id="@+id/tv_report_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:gravity="center"
        android:padding="@dimen/dp_10"
        android:text="内容有重复（坟贴等）"
        android:textColor="@color/color_f6"
        android:textSize="@dimen/sp_16" />

    <TextView
        android:id="@+id/tv_report_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:gravity="center"
        android:padding="@dimen/dp_10"
        android:text="内容太老旧（之前看过）"
        android:textColor="@color/color_f6"
        android:textSize="@dimen/sp_16" />


    <TextView
        android:id="@+id/tv_report_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:gravity="center"
        android:padding="@dimen/dp_10"
        android:text="广告色情/政治/侮辱"
        android:textColor="@color/color_f6"
        android:textSize="@dimen/sp_16" />

    <TextView
        android:id="@+id/tv_report_5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:gravity="center"
        android:padding="@dimen/dp_10"
        android:text="其他屏蔽理由"
        android:textColor="@color/color_f6"
        android:textSize="@dimen/sp_16" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_5"
        android:background="@color/colorLine" />

    <TextView
        android:id="@+id/tv_cancle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:gravity="center"
        android:padding="@dimen/dp_15"
        android:text="取消"
        android:textColor="@color/color_f6"
        android:textSize="@dimen/sp_16" />


</LinearLayout>